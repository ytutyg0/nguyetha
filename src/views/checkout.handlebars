{{> header}}
<div class="container">
    <div class="py-5 text-center">
        <h2>CHECKOUT</h2>
        <p class="lead">Complete Your Information Below</p>
    </div>
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">{{session.cart.totalQty}}</span>
            </h4>
            <ul class="list-group mb-3 sticky-top">
                {{#each products}}
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">{{this.item.title}}</h6>
                        <small class="text-muted">Qantity : {{this.qty}}</small>
                    </div>
                    <span class="text-muted">${{this.price}}</span>
                </li>
                {{/each}}
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>${{totalPrice}}</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Billing address</h4>
            <form class="needs-validation" action="/user/order" method="POST">
                <div class="mb-3">
                    <label for="username">Username</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Username" value="{{user.name}}" name="name" required="required">
                        <div class="invalid-feedback" style="width: 100%;"> Your username is required. </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="phone">Phone</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="0123456789" value="{{user.phone}}" name="phone" 
                        pattern="[0-9]{8,15}" title="Phone number must have 8-15 digits" required="required">
                        <div class="invalid-feedback" style="width: 100%;"> Your phone is required. </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" placeholder="you@example.com" value="{{user.email}}" name="email" required="required">
                    <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                </div>
                <div class="mb-3">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" placeholder="1234 Main St" value="{{user.address}}" name="address" required="required">
                    <div class="invalid-feedback"> Please enter your shipping address. </div>
                </div>
                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label for="country">Country</label>
                        <input type="text" class="form-control" placeholder="VietNam" name="country" required="required">
                        <div class="invalid-feedback"> Please select a valid country. </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="state">City</label>
                        <input type="text" class="form-control" placeholder="Hanoi" name="city" required="required">
                        <div class="invalid-feedback"> Please provide a valid state. </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="zip">Zip</label>
                        <input type="text" class="form-control" placeholder="" name="zip"
                        pattern="[0-9]{6}" title="PostalCode must have 6 digits" required="required">
                        <div class="invalid-feedback"> Zip code required. </div>
                    </div>
                </div>
                <hr class="mb-4">
                <h4 class="mb-3">Payment</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="cc-name">Name on card</label>
                        <input type="text" class="form-control" id="cc-name" placeholder="" name="ccname" required="required">
                        <small class="text-muted">Full name as displayed on card</small>
                        <div class="invalid-feedback"> Name on card is required </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="cc-number">Credit card number</label>
                        <input type="text" class="form-control" placeholder="" name="ccnumber" required="required">
                        <div class="invalid-feedback"> Credit card number is required </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="cc-expiration">Expiration</label>
                        <input type="text" class="form-control"  placeholder="" name="ccexpiration" required="required">
                        <div class="invalid-feedback"> Expiration date required </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="cc-cvv">CVV / CVC code </label>
                        <input type="text" class="form-control" placeholder="" name="cccvv" required="required"
                        pattern="[0-9]{3}" title="CVV must have 3 digits (You will find the code printed on the back of your debit card)">
                        <div class="invalid-feedback"> Security code required </div>
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-dark btn-lg btn-block" type="submit" style="margin-bottom: 30px;">Continue to checkout</button>
            </form>
        </div>
    </div>
</div>
{{> footer}}
<script>
(function () {
  'use strict'

  window.addEventListener('load', function () {
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.getElementsByClassName('needs-validation')

    // Loop over them and prevent submission
    Array.prototype.filter.call(forms, function (form) {
      form.addEventListener('submit', function (event) {
        if (form.checkValidity() === false) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  }, false)
}())
</script>