{{> header}}
<div class="container">
    <div class="py-5 text-center">
        <h2>THANH TOÁN</h2>
        <p class="lead">Vui lòng hoàn tất thông tin thanh toán để tiến hành đặt hàng</p>
    </div>
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Giỏ hàng của bạn</span>
                <span class="badge badge-secondary badge-pill">{{session.cart.totalQty}}</span>
            </h4>
            <ul class="list-group mb-3 sticky-top">
                {{#each products}}
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">{{this.item.title}}</h6>
                        <small class="text-muted">Số lượng : {{this.qty}}</small>
                    </div>
                    <span class="text-muted">{{this.price}} VND</span>
                </li>
                {{/each}}
                <li class="list-group-item d-flex justify-content-between">
                    <span>Tổng tiền</span>
                    <strong>{{totalPrice}} VND</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Thông tin người nhận</h4>
            <form class="needs-validation" action="/user/order" method="POST">
                <div class="mb-3">
                    <label for="username">Tên</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Nhập tên người nhận" value="{{user.name}}" name="name" required="required">
                        <div class="invalid-feedback" style="width: 100%;"> Vui lòng nhập tên người nhận. </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="phone">Số điện thoại</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Nhập số điện thoại của người nhận" value="{{user.phone}}" name="phone"
                        pattern="[0-9]{8,15}" title="Số điện thoại phải bao gồm 8-15 chữ số" required="required">
                        <div class="invalid-feedback" style="width: 100%;"> Vui lòng nhập số điện thoại. </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" placeholder="VD: your_email@gmail.com" value="{{user.email}}" name="email" required="required">
                    <div class="invalid-feedback"> Vui lòng nhập địa chỉ email khả dụng. </div>
                </div>
                <div class="mb-3">
                    <label for="address">Địa chỉ</label>
                    <input type="text" class="form-control" placeholder="Địa chỉ nhận hàng" value="{{user.address}}" name="address" required="required">
                    <div class="invalid-feedback"> Vui lòng nhập địa chỉ giao hàng. </div>
                </div>
                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label for="country">Quốc gia</label>
                        <input type="text" class="form-control" placeholder="VD: Việt Nam" name="country" required="required">
                        <div class="invalid-feedback"> Vui lòng nhập quốc gia khả dụng. </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="state">Thành phố</label>
                        <input type="text" class="form-control" placeholder="VD: Hà Nội" name="city" required="required">
                        <div class="invalid-feedback"> Vui lòng nhập thành phố khả dụng. </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="zip">Mã bưu điện</label>
                        <input type="text" class="form-control" placeholder="" name="zip"
                        pattern="[0-9]{6}" title="PostalCode must have 6 digits" required="required">
                        <div class="invalid-feedback"> Bắt buộc. </div>
                    </div>
                </div>
                <hr class="mb-4">
                <h4 class="mb-3">Phương thức thanh toán</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="cc-name">Tên chủ thẻ</label>
                        <input type="text" class="form-control" id="cc-name" placeholder="" name="ccname" required="required">
                        <small class="text-muted">Tên đầy đủ được in trên thẻ</small>
                        <div class="invalid-feedback"> Vui lòng nhập tên chủ thẻ </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="cc-number">Số thẻ tín dụng</label>
                        <input type="text" class="form-control" placeholder="" name="ccnumber" required="required">
                        <div class="invalid-feedback"> Vui lòng nhập số thẻ tín dụng </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="cc-expiration">Ngày hết hạn</label>
                        <input type="text" class="form-control"  placeholder="" name="ccexpiration" required="required">
                        <div class="invalid-feedback"> Vui lòng nhập ngày hết hạn </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="cc-cvv">Mã CVV / CVC  </label>
                        <input type="text" class="form-control" placeholder="" name="cccvv" required="required"
                        pattern="[0-9]{3}" title="CVV phải có 3 chữ số (Bạn có thể tìm thấy ở mặt sau của thẻ)">
                        <div class="invalid-feedback"> Vui lòng nhập mã bảo mật </div>
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-dark btn-lg btn-block" type="submit" style="margin-bottom: 30px;">Tiếp tục thanh toán</button>
            </form>
        </div>
    </div>
</div>
{{> footer}}
<script>
(function () {
  'use strict'

  window.addEventListener('load', function () {
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.getElementsByClassName('needs-validation')

    // Loop over them and prevent submission
    Array.prototype.filter.call(forms, function (form) {
      form.addEventListener('submit', function (event) {
        if (form.checkValidity() === false) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  }, false)
}())
</script>