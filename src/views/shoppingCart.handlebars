{{> header}}
<div class="container" style="margin-top: 30px;">
    <div style="margin: 30px auto; text-align: center;">
        <h1>MY BAG</h1>
    </div>
    {{#if products}}
    <div class="row">
        <div class="col-lg-8">
            <div class="card wish-list mb-3">
                <div class="card-body">
                    <h5 class="mb-4">Cart (<span>{{session.cart.totalQty}}</span> items)</h5>
                    {{#each products}}
                    <div class="row mb-4">
                        <div class="col-md-5 col-lg-3 col-xl-3">
                            <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                <a href="/products/{{this.item._id}}">
                                <img class="img-fluid w-100" src="/img/{{this.item.img}}" alt="Sample">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-7 col-lg-9 col-xl-9">
                            <div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <a href="/products/{{this.item._id}}" style="text-decoration: none; color: black">
                                        <h5>{{this.item.title}}</h5>
                                        </a>
                                        <p class="mb-3 text-muted text-uppercase small">Price: 
                                        {{#if this.item.salePrice}}
                                        <small><del>${{this.item.price}}</del></small> 
                                        <span class="sale-price">${{this.item.salePrice}}</span></p>
                                        {{else}}
                                        ${{this.item.price}}
                                        {{/if}}
                                        <p class="mb-2 text-muted text-uppercase small">Type: {{this.item.type}}</p>
                                        <p class="mb-3 text-muted text-uppercase small">Brand: {{this.item.brand}}</p>
                                    </div>
                                    <div>
                                        <h5>Quantity</h5>
                                        <p class="mb-3 text-uppercase " style="text-align: center; font-weight: bold;">{{this.qty}}</p>
                                        <small id="passwordHelpBlock" class="form-text text-muted text-center">
                                            (Note, {{this.qty}} piece)
                                        </small>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="/products/add-to-cart/remove/{{this.item._id}}" type="button" style="color: brown;"
                                            class="card-link-secondary small text-uppercase mr-3"><i
                                                class="fas fa-trash-alt mr-1" ></i> Remove item </a>
                                    </div>
                                    <p class="mb-0"><span><strong>${{this.price}}</strong></span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <hr class="mb-4">
                    <p class="text-primary mb-0" ><i class="fas fa-info-circle mr-1"></i> Do not delay the purchase,
                        adding
                        items to your cart does not mean booking them.</p>

                </div>
            </div>
            <!-- Card -->

            <!-- Card -->
            <div class="card mb-3">
                <div class="card-body">

                    <h5 class="mb-4">We accept</h5>

                    <img class="mr-2" width="45px"
                        src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                        alt="Visa">
                    <img class="mr-2" width="45px"
                        src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                        alt="American Express">
                    <img class="mr-2" width="45px"
                        src="https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                        alt="Mastercard">
                </div>
            </div>
            <!-- Card -->

        </div>
        <div class="col-lg-4">

            <!-- Card -->
            <div class="card mb-3">
                <div class="card-body">

                    <h5 class="mb-3">The total amount of</h5>

                    <ul class="list-group list-group-flush">
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Temporary amount
                            <span><strong>${{totalPrice}}</strong></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                            Shipping
                            <span>Free-shipping</span>
                        </li>
                        <li
                            class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>The total amount of</strong>
                                <strong>
                                    <p class="mb-0">(including VAT)</p>
                                </strong>
                            </div>
                            <span><strong>${{totalPrice}}</strong></span>
                        </li>
                    </ul>
                    <a href="/user/checkout" style="text-decoration: none;">
                    <button type="button" class="btn btn-dark btn-block waves-effect waves-light">CHECK OUT</button>
                    </a>
                </div>
            </div>
        </div>

    </div>
    {{else}}
    <hr>
    <div style="margin: 50px auto; text-align: center; color: gray">
        <h2>No item in cart</h2>
    </div>
    {{/if}}
</div>
{{> footer}}