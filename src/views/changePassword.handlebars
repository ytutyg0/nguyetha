<nav class="navbar navbar-expand-lg  navbar-light">
    <a class="navbar-brand" id="BrandName" href="/login">&larr;</a>
</nav>
<div class="container">
    <div class="containerSignup">
        <div class="signup-container">
            <form class="Signup-form" action="/resetpassword/{{token}}" method="POST">
                <img class="avatar" src="/img/undraw_authentication_fsn5.svg">
                <h3>Thay đổi mật khẩu</h3>
                <div class="login">
                    <span>Vui lòng nhập mật khẩu mới của bạn</span>
                </div>
                {{#if hasErrors}}
                    <div class="messages">
                        {{#each messages}}
                            <p>{{this}} !!</p>
                        {{/each}}
                    </div>
                {{/if}}
                <div class="input-div password">
                    <div class="i">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </div>
                    <div>
                        <input class="input" type="password" placeholder="Nhập mật khẩu mới" name="password" id="pw"
                        pattern=".{6,}" title="Mật khẩu phải có tối thiểu 6 ký tự" required="required">
                    </div>
                </div>
                <div class="input-div password confirm">
                    <div class="i">
                        <i class="fas fa-unlock-alt" aria-hidden="true"></i>
                    </div>
                    <div>
                        <input class="input" type="password" placeholder="Xác nhận mật khẩu mới" name="passwordConfirm" id="cfpw"
                        pattern=".{6,}" title="Mật khẩu phải có tối thiểu 6 ký tự" required="required">
                    </div>
                </div>
                <script>
                    var password = document.getElementById("pw"), confirm_password = document.getElementById("cfpw");

                    function validatePassword(){
                    if(password.value != confirm_password.value) {
                        confirm_password.setCustomValidity("Mật khẩu không khớp");
                    } else {
                        confirm_password.setCustomValidity('');
                    }
                    }
                    password.onchange = validatePassword;
                    confirm_password.onkeyup = validatePassword;
                </script>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <input type="submit" class="btn" value="ĐỔI MẬT KHẨU">
                
            </form>
        </div>
    </div>
