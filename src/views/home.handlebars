{{> header}}
<div
  id="carouselExampleIndicators"
  class="carousel slide"
  data-ride="carousel"
  data-interval="3000"
>
  <div class="carousel-inner">
    <div class="carousel-caption d-none d-md-block">
      <h5 class="animate__animated animate__backInUp animate__delay-0.5s">
        KHUYẾN MÃI lên đến 30%
      </h5>
      <p class="animate__animated animate__backInUp animate__delay-1s">Lên đến
        30% cho các sản phẩm mới</p>
      <button type="button" class="btn btn-outline-dark">MUA NGAY</button>
    </div>
    <div class="carousel-item active">
      <img class="w-100" src="/img/OPUMO-BEAR-Vitamins-Banner.jpg" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/img/DYLANMCDONOUGH_SHILLINGTON_1.jpg" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/img/blog-banner-img-mobile.jpg" />
    </div>

  </div>
  <a
    class="carousel-control-prev"
    href="#carouselExampleIndicators"
    role="button"
    data-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Trước</span>
  </a>
  <a
    class="carousel-control-next"
    href="#carouselExampleIndicators"
    role="button"
    data-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Tiếp</span>
  </a>
</div>

<div class="new-arrivals">
  <p class="title">HÀNG MỚI VỀ</p>
  {{#each newArrivals}}
    <div class="box-product">
      <div class="slide-img">
        <a href="/products/{{this._id}}"><img src="/img/{{this.img}}" /></a>
        <div class="overlay">
          <a href="/products/{{this._id}}"><button
              type="button"
              class="btn btn-outline-light"
            >MUA NGAY</button></a>
        </div>
      </div>
      <div class="detail-box">
        <div class="type">
          <a href="/products/{{this._id}}">{{this.title}}</a>
          <br />
          <span class="brand">{{this.brand}}</span>
        </div>
        <a href="/products/{{this._id}}" class="price">{{this.price}} VND</a>
      </div>
    </div>
  {{/each}}
</div>

<section class="parallex py-5">
  <div class="container py-5 text-white text-center">
    <div class="row py-3">
      <div>
        <h1>BỘ SƯU TẬP MỚI</h1>
        <p class="py-3">Khám phá bộ sưu tập mới nhất từ MUKTI, LUNA và BOBBI
          BROWN - các thương hiệu làm đẹp hàng đầu, đem đến cho bạn sản phẩm
          chất lượng và đa dạng để làm nổi bật vẻ đẹp tự nhiên của bạn.</p>
        <a href="/type/NewArrivals" style="text-decoration: none;">
          <button type="button" class="btn btn-outline-dark">
            XEM CHI TIẾT</button>
        </a>
      </div>
    </div>
  </div>
</section>

<div class="item-sale">
  <p class="title">KHUYẾN MÃI BLACK FRIDAY</p>
  <p>Lên tới 50%</p>
  <div
    id="carouselExampleCaptions"
    class="carousel slide"
    data-ride="carousel"
    data-interval="1800"
  >
    <ol class="carousel-indicators">
      <li
        data-target="#carouselExampleCaptions"
        data-slide-to="0"
        class="active"
      ></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="box-product">
          <div class="slide-img">
            <a href="/products/{{product._id}}"><img
                src="/img/{{product.img}}"
              /></a>
          </div>
          <div class="detail-box">
            <div class="type">
              <a href="/products/{{product._id}}">{{product.title}}</a>
              <br />
              <span>{{product.brand}}</span>
            </div>
            <p class="price"><small><del>{{product.price}}
                  VND</del></small><span> </span><span
                class="sale-price"
              >{{product.salePrice}} VND</span></p>
            <div class="buy-button">
              <a href="/products/{{product._id}}"><button
                  type="button"
                  class="btn btn-outline-dark"
                ><span>MUA NGAY</span></button></a>
            </div>
          </div>
        </div>
      </div>
      {{#each saleItems}}
        <div class="carousel-item">
          <div class="box-product">
            <div class="slide-img">
              <a href="/products/{{this._id}}"><img
                  src="/img/{{this.img}}"
                /></a>
            </div>
            <div class="detail-box">
              <div class="type">
                <a href="/products/{{this._id}}">{{this.title}}</a>
                <br />
                <span>{{this.brand}}</span>
              </div>
              <p class="price"><small><del>{{this.price}} VND</del></small><span
                > </span><span class="sale-price">{{this.salePrice}}
                  VND</span></p>
              <div class="buy-button">
                <a href="/products/{{this._id}}"><button
                    type="button"
                    class="btn btn-outline-dark"
                  ><span>MUA NGAY</span></button></a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <a
      class="carousel-control-prev"
      href="#carouselExampleCaptions"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Trước</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleCaptions"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Tiếp</span>
    </a>
  </div>
</div>

<div class="new-arrivals">
  <a href="/type/BestSellers" style="text-decoration: none; color: black;">
    <p class="title">BÁN CHẠY NHẤT</p>
  </a>
  {{#each bestSellers}}
    <div class="box-product">
      <div class="slide-img">
        <a href="/products/{{this._id}}"><img src="/img/{{this.img}}" /></a>
        <div class="overlay">
          <a href="/products/{{this._id}}"><button
              type="button"
              class="btn btn-outline-light"
            >MUA NGAY</button></a>
        </div>
      </div>
      <div class="detail-box">
        <div class="type">
          <a href="/products/{{this._id}}">{{this.title}}</a>
          <br />
          <span>{{this.brand}}</span>
        </div>
        <a href="/products/{{this._id}}" class="price">{{this.price}} VND</a>
      </div>
    </div>
  {{/each}}
</div>
