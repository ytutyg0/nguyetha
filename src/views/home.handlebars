{{> header}}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
  <div class="carousel-inner">
    <div class="carousel-caption d-none d-md-block">
      <h5 class="animate__animated animate__backInUp animate__delay-0.5s"> SALE OF up to 30% </h5>
      <p class="animate__animated animate__backInUp animate__delay-1s">Get up to 30% off for new arrivals</p>
      <button type="button" class="btn btn-outline-dark ">SHOP NOW</button>
    </div>
    <div class="carousel-item active">
      <img class="w-100" src="/img/OPUMO-BEAR-Vitamins-Banner.jpg">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/img/DYLANMCDONOUGH_SHILLINGTON_1.jpg">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/img/blog-banner-img-mobile.jpg">
    </div>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="new-arrivals">
  <p class="title">NEW ARIRIVALS</p>
  {{#each newArrivals}}
  <div class="box-product">
    <div class="slide-img">
      <a href="/products/{{this._id}}"><img src="/img/{{this.img}}"></a>
      <div class="overlay">
        <a href="/products/{{this._id}}"><button type="button" class="btn btn-outline-light ">BUY NOW</button></a>
      </div>
    </div>
    <div class="detail-box">
      <div class="type">
        <a href="/products/{{this._id}}">{{this.title}}</a>
        <br>
        <span class="brand">{{this.brand}}</span>
      </div>
      <a href="/products/{{this._id}}" class="price">${{this.price}}</a>
    </div>
  </div>
  {{/each}}
</div>

<section class="parallex py-5">
  <div class="container py-5 text-white text-center">
    <div class="row py-3">
      <div>
        <h1>NEW COLLECTION</h1>
        <p class="py-3">Lorem ipsum dolor sit amet consectetur adipisicing elit. Nulla libero necessitatibus facilis,
          unde delectus laborum veritatis nihil molestiae temporibus asperiores ipsam porro assumenda alias commodi
          earum fuga veniam eum est.</p>
        <a href="/type/NewArrivals" style="text-decoration: none;">
        <button type="button" class="btn btn-outline-dark ">GET DETAIL</button>
        </a>
      </div>
    </div>
  </div>
</section>

<div class="item-sale">
  <p class="title">BLACK FRIDAY SALE</p>
  <p>Sale up to 50%</p>
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" data-interval="1800">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="box-product">
          <div class="slide-img">
            <a href="/products/{{product._id}}"><img src="/img/{{product.img}}"></a>
          </div>
          <div class="detail-box">
            <div class="type">
              <a href="/products/{{product._id}}">{{product.title}}</a>
              <br>
              <span>{{product.brand}}</span>
            </div>
            <p class="price"><small><del>${{product.price}}</del></small><span> </span><span class="sale-price">${{product.salePrice}}</span></p>
            <div class="buy-button">
              <a href="/products/{{product._id}}"><button type="button" class="btn btn-outline-dark "><span>BUY NOW</span></button></a>
            </div>
          </div>
        </div>
      </div>
      {{#each saleItems}}
      <div class="carousel-item">
        <div class="box-product">
          <div class="slide-img">
            <a href="/products/{{this._id}}"><img src="/img/{{this.img}}"></a>
          </div>
          <div class="detail-box">
            <div class="type">
              <a href="/products/{{this._id}}">{{this.title}}</a>
              <br>
              <span>{{this.brand}}</span>
            </div>
            <p class="price"><small><del>${{this.price}}</del></small><span> </span><span class="sale-price">${{this.salePrice}}</span></p>
            <div class="buy-button">
              <a href="/products/{{this._id}}"><button type="button" class="btn btn-outline-dark "><span>BUY NOW</span></button></a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="new-arrivals">
  <a href="/type/BestSellers" style="text-decoration: none; color: black;">
  <p class="title">BEST SELLERS</p>
  </a>
  {{#each bestSellers}}
  <div class="box-product">
    <div class="slide-img">
      <a href="/products/{{this._id}}"><img src="/img/{{this.img}}"></a>
      <div class="overlay">
        <a href="/products/{{this._id}}"><button type="button" class="btn btn-outline-light ">BUY NOW</button></a>
      </div>
    </div>
    <div class="detail-box">
      <div class="type">
        <a href="/products/{{this._id}}">{{this.title}}</a>
        <br>
        <span>{{this.brand}}</span>
      </div>
      <a href="/products/{{this._id}}" class="price">${{this.price}}</a>
    </div>
  </div>
  {{/each}}
</div>
{{> footer}}