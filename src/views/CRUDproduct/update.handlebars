{{> header}}
<div class="container create-form">
    <h3>Update a product</h3>
    <form method="POST" action="/admin/{{product._id}}?_method=PUT">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="title">Product name</label>
                <input type="text" class="form-control" value="{{product.title}}" name="title" placeholder="Product name">
            </div>
            <div class="form-group col-md-6">
                <label for="brand">Brand name</label>
                <input type="text" class="form-control" value="{{product.brand}}" name="brand" placeholder="Brand name">
            </div>
        </div>
        <div class="form-group">
            <label for="type">Type of product</label>
            <input type="text" class="form-control" value="{{product.type}}" name="type" placeholder="Serum, Cleansing, Moisturisers , .. ">
        </div>
        <div class="form-group">
            <label for="qty">Quantity of product</label>
            <input type="text" class="form-control" value="{{product.qty}}" name="qty" placeholder="number: 10 ....">
        </div>
        <div class="form-group">
            <label for="price">Price of product</label>
            <input type="text" class="form-control" value="{{product.price}}" name="price" placeholder="number: 10 ....">
        </div>
        <div class="form-group">
            <label for="salePrice">Sale Price of product</label>
            <input type="text" class="form-control" value="{{product.salePrice}}" name="salePrice" placeholder="number: 10 ....">
        </div>
        <div class="form-group">
                <label for="img">Image</label>
                <input type="file" class="form-control-file" id="img" name="img">
        </div>
        <div class="form-group">
            <label for="tag">Tag</label>
            <input type="text" class="form-control" value="{{product.tag}}" name="tag" placeholder="Tag name ....">
        </div>
        <div class="form-group">
            <label for="main_detail_title">Main description title</label>
            <input type="text" class="form-control" value="{{product.detail.main_detail.title}}" name="main_detail_title" placeholder="Input here... ">
        </div>
        <div class="form-group">
    <label for="main_detail_description">Main description</label>
    <textarea class="form-control" rows="3" name="main_detail_description">{{product.detail.main_detail.description}}</textarea>
  </div>
        <div class="form-group">
            <label for="main_detail_feature">Feature</label>
            {{#each feature}}
            <input class="form-control" value="{{this}}" rows="3" name="main_detail_feature">
            {{/each}}
        </div>
        <div class="form-group">
            <label for="sub_detail_title">Sub description title </label>
            <input type="text" class="form-control" value="{{product.detail.sub_detail.title}}" name="sub_detail_title"placeholder="Input here... ">
        </div>
        <div class="form-group">
            <label for="sub_detail_2">More detail information</label>
            <textarea class="form-control" rows="3" name="sub_detail_2">{{product.detail.sub_detail_2}}</textarea>
        </div>
        <button type="submit" class="btn btn-dark">Update</button>
    </form>

</div>
{{> footer}}