{{> header}}
<div class="container">
    <div class="header pb-8 pt-lg-8 d-flex align-items-center" style="min-height: 400px; background-size: cover; background-position: center top;">
      <!-- Mask -->
      <span class="mask bg-gradient-default opacity-8"></span>
      <!-- Header container -->
      <div class="container-fluid d-flex align-items-center">
        <div class="row">
          <div class="col-lg-10 col-md-12">
            <h1 class="display-2">Xin chào 
                {{#if user.name}}
                {{user.name}}
                {{else}}
                {{user.email}}
                {{/if}}</h1>
            <p class=" mt-0 mb-5">Đây là trang thông tin cá nhân của bạn, nơi bạn có thể quản lý tài khoản và thông tin cá nhân của mình!</p>
            <a href="/user/order" class="btn btn-dark">Kiểm tra đơn hàng</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        
          
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div>
                  <h3>Tài khoản của tôi</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form action="/user/user-profile/{{user._id}}?_method=PUT" method="POST">
                <h6 class="heading-small text-muted mb-4">Thông tin cá nhân</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-email">Địa chỉ email</label>
                        <input type="email" name="email" class="form-control form-control-alternative" value="{{user.email}}" required="required">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <a href="/resetpassword/{{token}}">Đổi mật khẩu</a>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" >Tên của bạn</label>
                        <input type="text" class="form-control form-control-alternative" name="name" required="required"
                        {{#if user.name}}
                        value="{{user.name}}"
                        {{/if}} placeholder="Nhập tên đầy đủ của bạn" >
                      </div>
                    </div>
                    {{#if messages}}
                    <div class="messages">
                        {{messages}}
                    </div>
                    {{/if}}
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" >Số điện thoại</label>
                        <input type="text" class="form-control form-control-alternative" name="phone" 
                        pattern="[0-9]{8,15}" title="Phone number must have 8-15 digits" required="required"
                        {{#if user.phone}}
                        value="{{user.phone}}"
                        {{/if}} placeholder="Nhập số điện thoại của bạn">
                      </div>
                    </div>
                  </div>
                </div>
                <hr class="my-4">
                <!-- Address -->
                <h6 class="heading-small text-muted mb-4">Thông tin liên lạc</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-address">Địa chỉ</label>
                        <input class="form-control form-control-alternative" name="address" placeholder="Nhập địa chỉ của bạn" required="required"
                        {{#if user.address}}
                        value="{{user.address}}"
                        {{/if}}
                        type="text">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-city">Thành phố</label>
                        <input type="text" class="form-control form-control-alternative"name="city" placeholder="Nhập tên thành phố" required="required"
                        {{#if user.city}}
                        value="{{user.city}}"
                        {{/if}}>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-country">Quốc gia</label>
                        <input type="text" class="form-control form-control-alternative" name="country" placeholder="Quốc gia của bạn" required="required"
                        {{#if user.country}}
                        value="{{user.country}}"
                        {{/if}}>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-country">Mã bưu điện</label>
                        <input type="text" name="postalCode" class="form-control form-control-alternative" placeholder="VD: 150000" 
                        pattern="[0-9]{6}" title="PostalCode must have 6 digits" required="required"
                        {{#if user.postalCode}}
                        value="{{user.postalCode}}"
                        {{/if}}>
                      </div>
                    </div>
                  </div>
                </div>
                <input type="submit" name="submit" value="Xác nhận thay đổi" class="btn btn-dark" style="margin: 30px auto">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{> footer}}