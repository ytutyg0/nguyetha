<nav class="navbar navbar-expand-lg  navbar-light">
    <a class="navbar-brand" id="BrandName" href="/login">&larr;</a>
</nav>
<div class="container">
    <div class="containerSignup">
        <div class="signup-container">
            <form class="Signup-form" action="/signup" method="POST">
                <img class="avatar" src="/img/undraw_male_avatar_323b.svg">
                <h2>Đăng ký</h2>
                <div class="login">
                    <span>Đã có tài khoản? </span>
                    <a href="/login">Đăng nhập</a>
                </div>
                {{#if hasErrors}}
                    <div class="messages">
                        {{#each messages}}
                            <p>{{this}} !!</p>
                        {{/each}}
                    </div>
                {{/if}}
                <div class="input-div username">
                    <div class="i">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </div>
                    <div>
                        <input class="input" type="text" placeholder="Tên của bạn" name="name" required="required">
                    </div>
                </div>
                <div class="input-div username">
                    <div class="i">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </div>
                    <div>
                        <input class="input" type="text" placeholder="Email" name="email" required="required">
                    </div>
                </div>
                <div class="input-div password">
                    <div class="i">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </div>
                    <div>
                        <input class="input" type="password" placeholder="Mật khẩu" name="password" required="required">
                    </div>
                </div>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <input type="submit" class="btn" value="Đăng ký">
                <div class="social-media">
                    <a href="#">Tiếp tục với Facebook</a>
                </div>
            </form>
        </div>
    </div>
